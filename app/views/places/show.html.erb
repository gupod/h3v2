<h1><%= @place.name %></h1>

<h2>Posts</h2>
<% @posts = Post.where({place_id: "#{@place.id}"})%>
<% for post in @posts %>
<h3>
<%= post.title%>
</h3>
<%= post.posted_on%>
<p> <%= post.description%> </p>
<% end %>

<h3>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</h3>

<h3>
<a href="/places">Back to Places</a>
</h3>